{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    // in CommonJS
    "node": true
  },
  "rules": {
    "valid-jsdoc": ["error", { "requireReturn": true }],
    "block-scoped-var": "error",
    "complexity": [1, 10],
    "consistent-return": "off",
    "default-case": "error",
    "dot-notation": "warn",
    "guard-for-in": "error",
    "no-alert": "error",
    "no-div-regex": "error",
    "no-else-return": "error",
    "no-invalid-this": "error",
    "no-loop-func": "error",
    "no-param-reassign": "warn",
    "no-process-env": "off",
    "no-script-url": "error",
    "no-unused-expressions": "error",
    "no-useless-concat": "error",
    "no-void": "error",
    "no-warning-comments": "off",
    "vars-on-top": "error",
    "no-shadow": "error",
    "no-undef": "error",
    "no-use-before-define": "error",
    "arrow-parens": "error",
    "no-var": "error",
    "object-shorthand": "warn",
    "prefer-arrow-callback": "error",
    "prefer-const": "error",
    "prefer-spread": "error",
    "prefer-template": "off",
    "require-yield": "error",
    "no-console": "error",
    "no-debugger": "error",
    "no-unused-vars": "error",
    "max-len": [1, {"code": 120, "ignoreStrings": true, "ignoreTemplateLiterals": true}],
    "object-curly-spacing": "error",
    "quotes": ["error", "single"],
    "space-before-function-paren": "error",
    "dot-location": ["error", "property"],
    "semi": ["error", "always"],
    "indent": ["error", 4]
  }
}
