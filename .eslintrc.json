{
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true,
      "impliedStrict": true,
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    // I write for browser
    "browser": true,
    // in CommonJS
    "node": true
  },
  "rules": {
    "valid-jsdoc": [2, { "requireReturn": false }],
    "block-scoped-var": 2,
    "complexity": [1, 10],
    "consistent-return": 0,
    "default-case": 2,
    "dot-notation": 0,
    "guard-for-in": 2,
    "no-alert": 2,
    "no-div-regex": 2,
    "no-else-return": 2,
    "no-invalid-this": 2,
    "no-loop-func": 2,
    "no-param-reassign": 1,
    "no-process-env": 0,
    "no-script-url": 2,
    "no-unused-expressions": 2,
    "no-useless-concat": 2,
    "no-void": 2,
    "no-warning-comments": 0,
    "vars-on-top": 2,
    "no-shadow": 2,
    "no-undefined": 2,
    "no-use-before-define": 2,
    "arrow-parens": 2,
    "no-var": 2,
    "object-shorthand": 1,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-spread": 2,
    "prefer-template": 0,
    "require-yield": 2,
    "no-console": 0,
    "no-debugger": 0,
    "no-unused-vars": 1,
    "max-len": [1, {"code": 120, "ignoreStrings": true, "ignoreTemplateLiterals": true}],
    "object-curly-spacing": 0,
    "space-before-function-paren": 2,
    "dot-location": [2, "property"],
    "semi": 2,
    "indent": ["error", 4]
  }
}
